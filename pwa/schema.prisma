model User {
  id        String     @id @default(uuid())
  savedJobs SavedJob[]
}

model Job {
  id        String     @id @default(uuid())
  savedBy   SavedJob[]
}

model SavedJob {
  id      String  @id @default(uuid())
  userId  String
  jobId   String

  user    User    @relation(fields: [userId], references: [id])
  job     Job     @relation(fields: [jobId], references: [id])
}
